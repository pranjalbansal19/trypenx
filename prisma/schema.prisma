generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ContractType {
  Basic
  BasicPlus
  Foundation
  Pro
  Enterprise
}

enum CustomerStatus {
  Active
  Paused
  Cancelled
}

enum CustomerType {
  Direct
  ITMS
}

enum ScopeType {
  ip_range
  domain
  subdomain
}

enum TestType {
  soft_scan
  full_pen_test
}

enum Frequency {
  daily
  weekly
  monthly
  custom
}

enum TestRunStatus {
  Scheduled
  Running
  Completed
  Failed
}

enum ReportStatus {
  New
  Reviewed
  Sent
}

enum AdminRole {
  SuperAdmin
  SD
  ITMS
}

enum AdminSessionStatus {
  Pending2FA
  Active
  Revoked
}

model Customer {
  id                   String             @id @default(cuid())
  companyName          String
  customerType         CustomerType       @default(Direct)
  contractType         ContractType
  contractStartDate    DateTime
  contractLengthMonths Int
  status               CustomerStatus
  addOns               Json?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  notes        CustomerNote[]
  consents     CustomerConsent[]
  scopes       Scope[]
  testConfig   TestConfiguration?
  testRuns     TestRun[]
  reports      Report[]
}

model CustomerNote {
  id         String   @id @default(cuid())
  customerId String
  content    String
  createdAt  DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model CustomerConsent {
  id           String   @id @default(cuid())
  customerId   String
  fileName     String
  fileMimeType String
  fileSize     Int
  fileData     Bytes
  agreedAt     DateTime
  uploadedAt   DateTime @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model Scope {
  id         String   @id @default(cuid())
  customerId String
  type       ScopeType
  value      String
  notes      String?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())

  customer Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  testRuns TestRunScope[]

  @@index([customerId])
}

model TestConfiguration {
  id                 String    @id @default(cuid())
  customerId         String    @unique
  testType           TestType
  frequency          Frequency
  cronExpression     String?
  preferredRunWindow Json
  enabled            Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model TestRun {
  id                    String        @id @default(cuid())
  customerId            String
  startTime             DateTime?
  endTime               DateTime?
  scheduledTime         DateTime
  status                TestRunStatus
  engineOutputReference String?
  errorMessage          String?
  createdAt             DateTime      @default(now())

  customer Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  report   Report?
  scopes   TestRunScope[]

  @@index([customerId])
}

model TestRunScope {
  testRunId String
  scopeId   String

  testRun TestRun @relation(fields: [testRunId], references: [id], onDelete: Cascade)
  scope   Scope   @relation(fields: [scopeId], references: [id], onDelete: Cascade)

  @@id([testRunId, scopeId])
  @@index([scopeId])
}

model Report {
  id                String       @id @default(cuid())
  runId             String       @unique
  customerId        String
  severitySummary   Json
  reportFile        String
  rawDataFile       String
  generatedTimestamp DateTime
  sentToCustomer    Boolean      @default(false)
  notes             String?
  status            ReportStatus
  createdAt         DateTime     @default(now())

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  run      TestRun  @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([customerId])
}

model AdminUser {
  id               String   @id @default(cuid())
  email            String   @unique
  name             String?
  role             AdminRole
  passwordHash     String
  totpSecret       String?
  totpEnabled      Boolean  @default(false)
  failedLoginCount Int      @default(0)
  lockUntil        DateTime?
  lastLoginAt      DateTime?
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  sessions   AdminSession[]
  auditLogs  AdminAuditLog[]
}

model AdminSession {
  id          String             @id @default(cuid())
  userId      String
  tokenHash   String             @unique
  status      AdminSessionStatus @default(Pending2FA)
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime           @default(now())
  expiresAt   DateTime
  lastUsedAt  DateTime?

  user AdminUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
}

model AdminAuditLog {
  id        String   @id @default(cuid())
  userId    String?
  email     String?
  action    String
  ipAddress String?
  userAgent String?
  success   Boolean
  metadata  Json?
  createdAt DateTime @default(now())

  user AdminUser? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
}
